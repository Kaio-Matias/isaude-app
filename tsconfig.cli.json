{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist-cli", // Compilaremos os ficheiros para esta pasta
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/lib/**/*.ts",
    "src/database/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app"
  ]
}